<%- include('../partials/header') %>

<main class="main" id="powerForm">
    <div class="container">
        <form action="#" class="form" id="powerForm">
            <div class="form-checks d-flex flex-wrap mb-5">
                <% powers.forEach(power => { %>

                    <div class="form-check my-3 mx-3">
                        <input 
                            class="form-check-input"
                            type="checkbox"
                            value="<%= power.power_id %>" 
                            id="power<%= power.power_id %>"
                        />
                        <label for="power<%= power.power_id %>" class="form-check-label">
                            <%= power.power %>
                        </label>
                    </div>
                
                <% }) %>
            </div>
            <button type="submit" role="button" class="btn btn-primary">Add Powers</button>
        </form>
    </div>
</main>

<%- include('../partials/footer') %>